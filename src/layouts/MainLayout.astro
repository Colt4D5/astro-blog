---
import Header from "../components/Header.astro";
import Footer from "../components/svelte/Footer.svelte";
import '../assets/style.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<!-- <link rel="stylesheet" href="./src/assets/style.css"> -->
		<title>Astro</title>
	</head>
	<body>
		<Header />
		<main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script>
  function resizeMain() {
    const headerHeight = document.querySelector('header#header').getBoundingClientRect().height;
    const footerHeight = document.querySelector('footer#footer').getBoundingClientRect().height;
    const mainHeight = document.querySelector('main#main');
    mainHeight.style.minHeight = `${window.innerHeight - headerHeight - footerHeight}px`;
  }
  resizeMain();

  window.addEventListener('resize', resizeMain);
</script>

<style>
	html :is(*, *::before, *::after) {
		box-sizing: border-box;
	}
	body {
		padding: 0;
		margin: 0;
	}
	main {
		width: min(100%, 800px);
		margin-inline: auto;
		padding-block: 4rem;
	}
</style>